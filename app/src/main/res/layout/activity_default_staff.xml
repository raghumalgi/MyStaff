<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mystaff.view.DefaultStaffActivity">


    <Button
        android:text="@string/staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:id="@+id/btn_staff"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:onClick="onStaffButtonClicked"/>

    <ImageView
        android:id="@+id/staff_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/btn_staff"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/left_margin_photo"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@android:drawable/gallery_thumb" />

    <TextView
        android:text="@string/staff_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_staff_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/staff_photo"
        android:visibility="gone"
       />

</RelativeLayout>
